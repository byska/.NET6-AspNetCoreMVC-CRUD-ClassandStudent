@model ClassVM

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
            <div class="mb-4">
                <select asp-for="classes.ClassId" class="form-select">
                    <option selected>Level</option>
                    @foreach(var item in Model.LevelClassesForDropDown)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="mb-4">
                 <select asp-for="classes.ClassId" class="form-select">
                     <option selected>Branch</option>
                    @foreach(var item in Model.BranchClassesForDropDown)
                    {
                        <option value="@item.Value" >@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetClass">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
