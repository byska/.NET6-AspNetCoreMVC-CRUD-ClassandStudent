@model StudentVM
@{
    ViewData["Title"] = "Student Page";
}
<div class="aler alert-success">@TempData["result"]</div>
<br />
<a asp-action="Create" asp-controller="Student" class="btn btn-primary">Create</a>
@foreach (var item in Model.ClasBranchForDropDown)
{
    <a class="btn btn-success" asp-action="GetStudent" asp-controller="Student" asp-route-id="@item.Text">@item.Text</a>
}
<a class="btn btn-success" asp-action="GetStudent" asp-controller="Student" asp-route-id="">List All</a>

<table class="table tabletable-hover table-bordered caption-top">
    <caption>List of Students</caption>
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(x=>x.student.FirstName)</th>
            <th>@Html.DisplayNameFor(x=>x.student.LastName)</th>
            <th>@Html.DisplayNameFor(x=>x.student.Address)</th>
            <th>@Html.DisplayNameFor(x=>x.student.StudentClass.Level)</th>
            <th>@Html.DisplayNameFor(x=>x.student.StudentClass.Branch)</th>
            <th>Detail</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Students)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.Level</td>
                <td>@item.Branch</td>
                <td class="text-center"><a class="btn btn-info" asp-action="Detail" asp-controller="Student" asp-route-id="@item.id">Detail</a></td>
                <td class="text-center"><a class="btn btn-warning" asp-action="Update" asp-controller="Student" asp-route-id="@item.id">Update</a></td>
                <td class="text-center"><a class="btn btn-danger" asp-action="Delete" asp-controller="Student" asp-route-id="@item.id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>